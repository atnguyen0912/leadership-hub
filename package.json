{
  "name": "leadership-hub",
  "version": "1.0.0",
  "description": "High school leadership class hub for logging hours",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint server/ client/src/ --ext .js,.jsx",
    "lint:fix": "eslint server/ client/src/ --ext .js,.jsx --fix",
    "format": "prettier --write \"server/**/*.js\" \"client/src/**/*.{js,jsx}\"",
    "format:check": "prettier --check \"server/**/*.js\" \"client/src/**/*.{js,jsx}\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atnguyen0912/leadership-hub.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/atnguyen0912/leadership-hub/issues"
  },
  "homepage": "https://github.com/atnguyen0912/leadership-hub#readme"
}
